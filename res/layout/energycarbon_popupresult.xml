<LinearLayout 
	android:layout_width="wrap_content" 
	android:layout_height="50dip" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/list3">
    <TextView 
    	android:id="@+id/energycarbon_popupresulttext1" 
    	android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_gravity="center"></TextView>
    <TextView 
		android:id="@+id/energycarbon_popupresulttext2" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:paddingTop="10dip"
		android:paddingBottom="10dip"></TextView>
    <Button 
    	android:text="OK" 
    	android:id="@+id/energycarbon_popupresultbutton1" 
    	android:layout_width="150dip" 
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"></Button>
</LinearLayout>
