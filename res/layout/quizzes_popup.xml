<LinearLayout 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/list3">
	<ScrollView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">		
	    <LinearLayout 
    		android:layout_height="match_parent" 
    		android:layout_width="match_parent"
    		android:orientation="vertical">
		    <TextView 
		    	android:layout_height="wrap_content" 
		    	android:layout_width="wrap_content" 
		    	android:id="@+id/quizzes_popup_textView1" 
		    	android:textSize="17dip"
		    	android:textColor="#FFFFFF"
		    	android:paddingTop="10dip"
		    	android:paddingLeft="10dip"></TextView>
		    <TextView 
		        android:layout_height="wrap_content" 
		        android:layout_width="wrap_content" 
		        android:id="@+id/quizzes_popup_textView2" 
		        android:textSize="17dip"
		        android:textColor="#FFFFFF"
		        android:paddingLeft="10dip"
		        android:textStyle="bold"></TextView>
		    <TextView 
				android:id="@+id/quizzes_popup_textView3" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:paddingLeft="10dip"
				android:textSize="17dip"></TextView>
			<TextView 
				android:id="@+id/quizzes_popup_textView4" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:paddingLeft="10dip"
				android:textSize="15dip"
				android:textStyle="italic"></TextView>	
		    <Button 
		    	android:text="Ok" 
		    	android:id="@+id/quizzes_popup_button" 
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:layout_gravity="center"></Button>
		</LinearLayout>
	</ScrollView>
</LinearLayout>		
