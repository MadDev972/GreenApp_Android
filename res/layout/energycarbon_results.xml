<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              	android:layout_width="fill_parent" 
              	android:layout_height="fill_parent" 
              	android:orientation="vertical"
              	android:background="@drawable/green_earth">
			<TextView 
				android:id="@+id/trademark" 
				android:gravity="right" 
				android:background="@drawable/haut_de_page" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:layout_alignParentTop="true"></TextView>
				<LinearLayout 
	              android:layout_width="fill_parent" 
	              android:layout_height="wrap_content" 
	              android:orientation="vertical"
	              android:layout_marginBottom="35dip"
	              android:layout_marginTop="35dip">
              <ScrollView
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content">		
	    		<LinearLayout 
    				android:layout_height="match_parent" 
    				android:layout_width="match_parent"
    				android:orientation="vertical">
				    <TextView 
				    	android:layout_height="wrap_content" 
				    	android:text="@string/energycarbonresult_intro" 
				    	android:id="@+id/energycarbonresult_intro" 
				    	android:layout_width="wrap_content"
				    	android:textColor="#228B22"
						android:textSize="25dip"></TextView>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="20dip">
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_house" 
				        	android:id="@+id/energycarbonresult_house" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				        <TextView 
				            android:layout_height="wrap_content" 
				            android:id="@+id/energycarbonresult_houseresult" 
				            android:layout_width="wrap_content"
				            android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="20dip">
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_flights" 
				        	android:id="@+id/energycarbonresult_flights" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				        <TextView 
				            android:layout_height="wrap_content" 
				            android:id="@+id/energycarbonresult_flightsresult" 
				            android:layout_width="wrap_content"
				            android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="20dip">
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_car" 
				        	android:id="@+id/energycarbonresult_car" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				        <TextView 
				            android:layout_height="wrap_content" 
				            android:id="@+id/energycarbonresult_carresult" 
				            android:layout_width="wrap_content"
				            android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="20dip">
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_public" 
				        	android:id="@+id/energycarbonresult_public" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				        <TextView 
				            android:layout_height="wrap_content" 
				            android:id="@+id/energycarbonresult_publicresult" 
				            android:layout_width="wrap_content"
				            android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="20dip">
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_second" 
				        	android:id="@+id/energycarbonresult_second" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				        <TextView 
				            android:layout_height="wrap_content" 
				            android:id="@+id/energycarbonresult_secondresult" 
				            android:layout_width="wrap_content"
				            android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_height="wrap_content" 
				    	android:layout_width="wrap_content"
				    	android:orientation="horizontal"
				    	android:paddingTop="30dip"
				    	android:layout_gravity="center">
				    	<TextView 
				        	android:layout_height="wrap_content" 
				        	android:text="@string/energycarbonresult_total" 
				        	android:id="@+id/energycarbonresult_total" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="20dip"></TextView>
				        <TextView 
				        	android:layout_height="wrap_content" 
				        	android:id="@+id/energycarbonresult_totalnb" 
				        	android:layout_width="wrap_content"
				        	android:textColor="#228B22"
						    android:textSize="17dip"></TextView>
				    </LinearLayout>
				    <LinearLayout 
				    	android:layout_width="match_parent" 
				    	android:layout_height="wrap_content" 
				    	android:orientation="vertical"
				    	android:gravity="right"
				    	android:paddingTop="20dip">
				        <Button 
				        	android:text="@string/energycarbonresult_button1" 
				        	android:layout_width="wrap_content" 
				        	android:layout_height="wrap_content" 
				        	android:id="@+id/energycarbonresult_button1"
				        	android:layout_weight="1"></Button>
				        <Button 
				        	android:text="@string/energycarbonresult_button2" 
				        	android:layout_width="wrap_content" 
				        	android:layout_height="wrap_content" 
				        	android:id="@+id/energycarbonresult_button2"
				        	android:layout_weight="1"></Button>
				    </LinearLayout>
				    </LinearLayout>
				    </ScrollView>   
</LinearLayout>
<TextView
			android:textStyle="italic" 
			android:textColor="#FFF5EE" 
			android:id="@+id/trademark" 
			android:gravity="right" 
			android:background="@drawable/pied_de_page" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true"></TextView>
</RelativeLayout> 