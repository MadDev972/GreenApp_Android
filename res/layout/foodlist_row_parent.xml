<LinearLayout 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:paddingLeft="40dip"
	android:paddingBottom="10dip"
	android:background="@drawable/list">
    <LinearLayout 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/linearLayout1">
        <TextView 
        	android:id="@+id/foodlist_parent_name"
        	android:layout_height="wrap_content" 
        	android:text="TextView" 
        	android:layout_width="wrap_content" 
        	android:textSize="17dip" 
        	android:textStyle="bold" 
        	android:textColor="#228B22"
        	android:layout_weight="1"></TextView>
        <ImageView 
        	android:layout_width="128dip" 
        	android:id="@+id/flrowparent_imageView1" 
        	android:layout_height="64dip"
        	android:paddingLeft="10dip"
        	android:layout_weight="2"></ImageView>
    </LinearLayout>
    <TextView 
    	android:id="@+id/foodlist_parent_subtype" 
    	android:layout_height="wrap_content" 
    	android:text="TextView" 
    	android:layout_width="wrap_content" 
    	android:textSize="12dip" 
    	android:textColor="#228B22"></TextView>
    <TextView 
    	android:id="@+id/foodlist_parent_adress" 
    	android:layout_height="wrap_content" 
    	android:text="TextView" 
    	android:layout_width="wrap_content" 
    	android:textSize="15dip" 
    	android:textColor="#228B22"></TextView>
</LinearLayout>
    