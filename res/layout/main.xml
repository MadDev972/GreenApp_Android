<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              	android:layout_width="fill_parent" 
              	android:layout_height="fill_parent" 
              	android:orientation="vertical"
              	android:background="@drawable/green_earth">
              	<TextView 
				android:id="@+id/trademark" 
				android:gravity="right" 
				android:background="@drawable/haut_de_page" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:layout_alignParentTop="true"></TextView>
				<LinearLayout 
	              android:layout_width="fill_parent" 
	              android:layout_height="wrap_content" 
	              android:orientation="vertical"
	              android:layout_marginBottom="35dip"
	              android:layout_marginTop="35dip">
              		<ScrollView
		    			android:layout_width="fill_parent"
		    			android:layout_height="wrap_content">		
	    				<LinearLayout 
		    				android:layout_height="match_parent" 
		    				android:layout_width="match_parent"
		    				android:orientation="vertical">
		    				<TextView 
		   						android:layout_margin="12dip"
		   						android:layout_width="fill_parent" 
		   						android:layout_height="wrap_content" 
		   						android:id="@+id/main_intro" 
		   						android:text="@string/main_text1"
		   						android:textSize="25dip"
		   						android:textColor="#228B22" 
		   						android:textStyle="bold"></TextView>
							<TextView 
		    					android:layout_marginLeft="12dip"
		    					android:layout_marginBottom="7dip"  
		    					android:id="@+id/main_random_tip1" 
		    					android:text="TextView" 
		    					android:layout_height="wrap_content" 
		    					android:layout_width="wrap_content"
		    					android:textSize="15dip"
		    					android:textColor="#228B22"></TextView>
		     				<TextView 
		     					android:layout_marginLeft="12dip" 
		     					android:layout_marginBottom="7dip"
		     					android:id="@+id/main_random_tip2" 
		     					android:text="TextView" 
		  				   		android:layout_height="wrap_content" 
		  				   		android:layout_width="wrap_content"
		  				   		android:textSize="15dip"
		     					android:textColor="#228B22"></TextView>
		     				<Button 
		        					android:id="@+id/main_more_tips" 
		        					android:layout_margin="12dip" 
		        					android:textStyle="italic" 
		        					android:layout_marginBottom="7dip" 
		        					android:layout_width="wrap_content" 
		        					android:layout_height="wrap_content" 
		        					android:drawableRight="@drawable/light_bulb" 
		        					android:text="@string/main_button1" 
		        					android:textSize="20dip" 
		        					android:textColor="#32CD32"
		        					android:layout_gravity="center"></Button>
		     				<TextView 
		     					android:textSize="25dip" 
					     		android:layout_margin="12dip" 
					     		android:textStyle="bold" 
					     		android:textColor="#228B22" 
					     		android:layout_width="wrap_content" 
					     		android:layout_height="wrap_content" 
					     		android:id="@+id/main_more_green" 
					     		android:text="@string/main_text2"></TextView>
					     	<Button 
					        		android:id="@+id/main_pick_cat" 
					        		android:layout_margin="12dip" 
					        		android:textStyle="italic" 
					        		android:layout_width="wrap_content" 
					        		android:layout_height="wrap_content" 
					        		android:drawableRight="@drawable/feather" 
					        		android:text="@string/main_button2" 
					        		android:textSize="20dip" 
					        		android:textColor="#32CD32"
					        		android:layout_gravity="center"></Button>
					  </LinearLayout>
				 </ScrollView>	 
  		</LinearLayout>
  		<TextView
			android:textStyle="italic" 
			android:textColor="#FFF5EE" 
			android:id="@+id/trademark" 
			android:gravity="right" 
			android:background="@drawable/pied_de_page" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true"></TextView>
</RelativeLayout> 