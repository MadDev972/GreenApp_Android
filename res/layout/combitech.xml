<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              	android:layout_width="fill_parent" 
              	android:layout_height="fill_parent" 
              	android:orientation="vertical"
              	android:background="#FFFFFF">
		<TextView 
				android:id="@+id/trademark" 
				android:gravity="right" 
				android:background="@drawable/combitech" 
				android:layout_height="wrap_content" 
				android:layout_width="fill_parent"
				android:layout_alignParentTop="true"></TextView>
				<LinearLayout 
	              android:layout_width="fill_parent" 
	              android:layout_height="wrap_content" 
	              android:orientation="vertical"
	              android:layout_marginBottom="35dip"
	              android:layout_marginTop="35dip">
              <ScrollView
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content">		
	    		<LinearLayout 
    				android:layout_height="match_parent" 
    				android:layout_width="match_parent"
    				android:orientation="vertical">
		            <TextView 
		            	android:layout_height="wrap_content" 
		            	android:text="@string/Combitech_description" 
		            	android:id="@+id/Combitech_textView1" 
		            	android:layout_width="wrap_content"
		            	android:textColor="#228B22"
						android:textSize="17dip"
						android:paddingTop="20dip"></TextView>
		            <TextView 
		                android:layout_height="wrap_content" 
		                android:text="@string/Combitech_text1" 
		                android:id="@+id/Combitech_text1" 
		                android:layout_width="wrap_content" 
		                android:textColor="#32CD32"
						android:textSize="20dip"
						android:drawableRight="@drawable/right_arrow"
						android:clickable="true"
						android:layout_gravity="right"
						android:paddingTop="10dip"
						android:textStyle="italic"></TextView>
		            <TextView 
		                android:layout_height="wrap_content"
						android:text="@string/Combitech_text2" 
						android:id="@+id/Combitech_text2" 
						android:layout_width="wrap_content"
						android:textColor="#32CD32"
						android:textSize="20dip"
						android:drawableRight="@drawable/right_arrow"
						android:clickable="true"
						android:layout_gravity="center"
						android:paddingTop="10dip"
						android:textStyle="italic"></TextView>
		            <TextView 
		                android:layout_height="wrap_content" 
		                android:text="@string/Combitech_text3" 
		                android:id="@+id/Combitech_text3" 
		                android:layout_width="wrap_content"
		                android:textColor="#32CD32"
						android:textSize="20dip"
						android:drawableRight="@drawable/right_arrow"
						android:clickable="true"
						android:layout_gravity="left"
						android:paddingTop="10dip"
						android:textStyle="italic"
						android:paddingBottom="20dip"></TextView>
		            </LinearLayout>
		    </ScrollView>
		</LinearLayout>
		<TextView
			android:textStyle="italic" 
			android:textColor="#FFF5EE" 
			android:id="@+id/trademark" 
			android:gravity="right" 
			android:background="@drawable/pied_de_page" 
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true"></TextView>
</RelativeLayout> 
